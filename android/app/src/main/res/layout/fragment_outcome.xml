<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Fragment"
    >
    <LinearLayout
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:text="@string/header.outcome"
            style="@style/Header"
            />

        <TextView
            android:text="@string/header.result"
            style="@style/Header"
            />

        <TextView
            android:id="@+id/result"
            android:fontFamily="sans-serif-thin"
            style="@style/Outomce"
            />

        <TextView
            android:text="@string/header.payout"
            style="@style/Header"
            />

        <TextView
            android:id="@+id/payout"
            android:fontFamily="sans-serif-thin"
            style="@style/Outomce"
            />

        <TextView
            android:text="@string/header.profit"
            style="@style/Header"
            />

        <TextView
            android:id="@+id/profit"
            android:fontFamily="sans-serif-thin"
            style="@style/Outomce"
            />
    </LinearLayout>

    <LinearLayout
    style="@style/ButtonGroup"
        >
    <Button
        android:id="@+id/edit"
        android:text="@string/button.edit"
        style="@style/LeftButton"
        />

    <Button
        android:id="@+id/reset"
        android:text="@string/button.reset"
        style="@style/Button"
        />
    </LinearLayout>
</RelativeLayout>
